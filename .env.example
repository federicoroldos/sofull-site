VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_APP_ID=your_app_id
# Android Google Sign-In uses the Web client ID.
VITE_GOOGLE_WEB_CLIENT_ID=your_web_client_id.apps.googleusercontent.com
# Use a full HTTPS URL for Android builds (example: https://sofull-site.vercel.app/api/auth-email)
VITE_AUTH_EMAIL_ENDPOINT=/api/auth-email
VITE_SESSION_DURATION_DAYS=180
# Optional token refresh tuning (milliseconds + enforcement toggle).
VITE_ACCESS_TOKEN_TTL_MS=3000000
VITE_ENFORCE_ACCESS_TOKEN_EXPIRY=false
AUTH_EMAIL_RATE_LIMIT_MAX=5
AUTH_EMAIL_RATE_LIMIT_WINDOW_SECONDS=600
