    "android:open": "npx cap open android",
    "android:apk": "npm run android:build && node scripts/android-gradle.mjs assembleDebug",
    "android:aab": "npm run android:build && node scripts/android-gradle.mjs bundleRelease"
  },
  "dependencies": {
    "@capacitor-firebase/authentication": "^8.0.1",
